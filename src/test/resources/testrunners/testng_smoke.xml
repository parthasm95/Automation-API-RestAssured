<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Rest API Smoke Test Suite" verbose="1" parallel="tests"
	thread-count="3">

	<listeners>
		<listener
			class-name="com.automazing.listeners.ExtentReportListener" />
	</listeners>

	<test name="Rest API regression Test" parallel="classes" thread-count="3">
		<classes>
			<class name="tests.gorest.GetUserTest" /> 
			<class name="tests.amadeus.GetFlightDetailsTest" />
			<class name="tests.fakestore.GetProductsTest" />
		</classes>
	</test>
</suite>